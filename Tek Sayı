import java.util.Scanner;

public class TekSayiToplami {
    public static void main(String[] args){
        int n;
        int total=0;
        Scanner input = new Scanner(System.in);
        do {
            System.out.printf("Bir sayÄ± giriniz:");
            n= input.nextInt();
            if (n %2 == 1){
                total += n;
            }
        }while (n>0);

        System.out.println("Toplam:" +total);
      }

    }

